<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-16dp"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/roundcorner"
                android:elevation="100dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="@id/linearLayout5"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                app:srcCompat="@drawable/check" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/layoutImages"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                app:columnCount="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <ImageView
                    android:id="@+id/langImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/todo"
                    app:layout_columnWeight="1"
                    android:src="@drawable/ic_qr_code" />

                <ImageView
                    android:id="@+id/lightImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/todo"
                    app:layout_columnWeight="1"
                    android:src="@drawable/light" />

                <ImageView
                    android:id="@+id/soundImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/todo"
                    app:layout_columnWeight="1"
                    android:src="@drawable/sound" />

            </androidx.gridlayout.widget.GridLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutImages">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/english"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/light_mode"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sound_on"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textFontWeight="100"
                    tools:targetApi="p" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/layout_bg"
                android:elevation="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="My Account"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field"
                    android:elevation="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextTextPersonName"
                        style="@style/input"
                        android:focusableInTouchMode="false"
                        android:text="@string/name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/nameInput"
                        style="@style/input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:drawableEnd="@drawable/pen"
                        android:text="Aimad Ezzahar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/label_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field"
                    android:elevation="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextTextPersonName2"
                        style="@style/input"
                        android:text="Email:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/emailInput"
                        style="@style/input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/pen"
                        android:text="imadezzahar@gmail.com"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/label_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field"
                    android:elevation="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextTextPersonName3"
                        style="@style/input"
                        android:text="Field:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/fieldInput"
                        style="@style/input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/pen"
                        android:text="GI"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/label_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field"
                    android:elevation="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextTextPersonName4"
                        style="@style/input"
                        android:text="Level:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/levelInput"
                        style="@style/input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/pen"
                        android:text="5eme annee"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/label_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_field"
                    android:elevation="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextTextPersonName5"
                        style="@style/input"
                        android:text="Password:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/passwordInput"
                        style="@style/input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:drawableEnd="@drawable/pen"
                        android:text="@string/stars_password"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/label_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/info_field"
                    android:elevation="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextTextPersonName6"
                        style="@style/input"
                        android:text="@string/confirm_password"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/confirmationInput"
                        style="@style/input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/pen"
                        android:text="@string/stars_password"

                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="219dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_background"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/layoutImages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/homeImageProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/taylor"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_corner_radius="50dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Taylor Swift"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/location" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Marrakesh, Morocco"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>